<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <NoWarn>CA1716;$(NoWarn)</NoWarn>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <PackageTags>$(PackageTags) Agnostic</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Xenial.Framework.Win, PublicKey=$(XenialPublicSignKey)" />
    <InternalsVisibleTo Include="Xenial.Framework.Blazor, PublicKey=$(XenialPublicSignKey)" />
    <InternalsVisibleTo Include="Xenial.Framework.Validation, PublicKey=$(XenialPublicSignKey)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DevExpress.ExpressApp" Version="$(DxPackageVersion)" />
  </ItemGroup>


  <ItemGroup>
    <Compile Update="**\*.Extension.cs">
      <DependentUpon>$([System.String]::Copy(%(Filename)).Replace('.Extension', '.cs'))</DependentUpon>
    </Compile>
    <Compile Update="**\*.Extensions.cs">
      <DependentUpon>$([System.String]::Copy(%(Filename)).Replace('.Extensions', '.cs'))</DependentUpon>
    </Compile>
    <Compile Update="**\*.Mappers.cs">
      <DependentUpon>$([System.String]::Copy(%(Filename)).Replace('.Mappers', '.cs'))</DependentUpon>
    </Compile>
    <Compile Update="**\*.ColumnsBuilder.cs">
      <DependentUpon>$([System.String]::Copy(%(Filename)).Replace('.ColumnsBuilder', '.cs'))</DependentUpon>
    </Compile>
  </ItemGroup>
  
</Project>
