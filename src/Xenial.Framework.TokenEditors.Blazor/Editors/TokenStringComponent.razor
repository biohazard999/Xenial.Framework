@if (ComponentModel is not null)
{
    <DxTagBox TValue="String"
              TData="String"
              Data="@ComponentModel.DataSource"
              Values="@ComponentModel.Values"
              AllowCustomTags="@ComponentModel.AllowCustomTags"
              ValuesChanged="ValuesChanged"
              @attributes="@ComponentModel.Attributes"
              ReadOnly="@ComponentModel.ReadOnly">
    </DxTagBox>
}

@code
{
    [Parameter]
    public TokenStringInputModel? ComponentModel { get; set; }
    public static RenderFragment Create(TokenStringInputModel componentModel) => @<TokenStringComponent ComponentModel="@componentModel" />;

    void ValuesChanged(System.Collections.Generic.IEnumerable<string> values)
    {
        if (ComponentModel is not null)
        {
            ComponentModel.SetValueFromUI(values);
        }
    }
}
