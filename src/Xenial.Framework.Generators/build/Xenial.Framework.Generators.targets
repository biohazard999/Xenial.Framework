<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="_InjectXenialGeneratorAttributes" BeforeTargets="PrepareForBuild;CompileDesignTime;GenerateMSBuildEditorConfigFileShouldRun">

    <PropertyGroup>
      <XenialAttributesModifier Condition="'$(XenialAttributesModifier)' == ''">internal</XenialAttributesModifier>
      <XenialDebugSourceGenerators Condition="'$(XenialDebugSourceGenerators)' == ''">false</XenialDebugSourceGenerators>
  </PropertyGroup>

    <ItemGroup>
      <CompilerVisibleProperty Include="XenialAttributesModifier" />
      <CompilerVisibleProperty Include="XenialDebugSourceGenerators" />
    </ItemGroup>

  </Target>

</Project>
