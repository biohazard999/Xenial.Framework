<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <_TFM>netstandard2.0</_TFM>
    <TargetFrameworks>$(_TFM)</TargetFrameworks>
    <TargetFramework>$(_TFM)</TargetFramework>
    <IsRoslynComponent>true</IsRoslynComponent>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <IsPackable>true</IsPackable>
    <DevelopmentDependency>true</DevelopmentDependency>
    <IncludeSource>false</IncludeSource>
    <IncludeSymbols>false</IncludeSymbols>
    <SymbolPackageFormat></SymbolPackageFormat>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    
    <!-- Debug source generators -->
    <!-- http://stevetalkscode.co.uk/debug-source-generators-with-vs2019-1610 -->
    <IsRoslynComponent>true</IsRoslynComponent>

    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="build\**\*" PackagePath="build\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Xenial.Framework.Generators.Internal\CurlyIndenter.cs" Link="CurlyIndenter.cs" />
    <Compile Include="..\Xenial.Framework.Generators.Internal\IXenialSourceGenerator.cs" Link="IXenialSourceGenerator.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.3" PrivateAssets="All" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.11.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="bin\Debug\netstandard2.0\\Xenial.Framework.Generators.dll" />
  </ItemGroup>

  <ItemGroup>
    <!-- Package the generator in the analyzer directory of the nuget package -->
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Remove="bin\Debug\netstandard2.0\\Xenial.Framework.Generators.pdb" />
    <None Include="$(OutputPath)\$(AssemblyName).pdb" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <!-- Package the Newtonsoft.Json dependency alongside the generator assembly -->
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Xenial.Framework.Generators.Internal\Xenial.Framework.Generators.Internal.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" PrivateAssets="all" />
  </ItemGroup>

</Project>
