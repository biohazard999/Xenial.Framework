    </None>
  </ItemGroup>-->

  <ItemGroup>
    <Content Include="*.dll">
        <Pack>true</Pack>
        <PackagePath>lib\$(TargetFramework)</PackagePath>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Remove="Xenial.Framework.Generators" />
    <PackageReference Remove="Xenial.Framework.Generators.Internal" />
    <PackageReference Remove="Xenial.Framework.LicGen" />
    <PackageReference Remove="Xenial.Framework.MsBuild" />
    <PackageReference Remove="Xenial.Licensing" />
  </ItemGroup>

