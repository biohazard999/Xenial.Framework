<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks></TargetFrameworks>
    <TargetFramework>$(FullFrameworkVersion)</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <OutputType>WinExe</OutputType>
    <CheckXenialLicense>true</CheckXenialLicense>
    <GenerateXenialLicense>true</GenerateXenialLicense>
    <ApplicationIcon>$(MSBuildThisFileDirectory)..\..\..\img\appicon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\xenial.svg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Images\xenial.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="5.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Xenial.FeatureCenter.Module.Win\Xenial.FeatureCenter.Module.Win.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Configuration" />
  </ItemGroup>

  <ItemGroup Condition="$(Configuration) == 'Release'">
    <PackageReference Include="Microsoft.DotNet.Framework.NativeImageCompiler" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  
  <Target Name="DeleteFiles" AfterTargets="Publish">
    <Delete Files="$(PublishDir)DevExpress.BonusSkins.$(DxVersionPart).dll" />
    <Delete Files="$(PublishDir)Microsoft.Web.WebView2.Wpf.dll" />
  </Target>
  
</Project>
